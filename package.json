{
  "name": "afghan-calendar",
  "version": "1.0.0",
  "description": "Afghan Shamsi (Solar Hijri) calendar conversion library with authentic Dari and Pashto month names",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "afghan",
    "calendar",
    "shamsi",
    "solar-hijri",
    "dari",
    "pashto",
    "afghanistan",
    "date",
    "conversion",
    "hijri"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/afghan-calendar.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/afghan-calendar/issues"
  },
  "homepage": "https://github.com/your-username/afghan-calendar#readme",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
